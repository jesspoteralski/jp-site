---
import BaseHead from "../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { Image } from "astro:assets";
import bilayer from "../../assets/work/Molsense-Lipid-Bilayer.png";
import confocal from "../../assets/work/Molecular-Devices-techIll.png";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        max-width: 1300px;
        margin: 0 auto;
        padding: 4rem 1rem;
        justify-content: space-between;
        background: #fcfcfa;
        @media (max-width: 900px) {
          grid-template-columns: 1fr;
        }
      }
      main {
      }
      h1 {
        border-bottom: solid 1px;
        padding-bottom: 2rem;
      }
      .layout {
        display: grid;
        grid-template-columns: 1fr 225px;
        gap: 4rem;
        padding: 4rem 0;
        align-items: start;
      }
      p {
        font-size: 1rem;
        color: color-mix(in srgb, currentcolor, transparent 50%);
        line-height: 1.2;
        border-left: solid 1px;
        padding-left: 1rem;
      }
      a {
        padding: 1rem 1rem 1rem 0;
        display: block;
      }
      img {
        mix-blend-mode: multiply;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>{"Technical Illustrations"}</h1>
      <a href="/work">&#x2190;{"back"}</a>
      <div class="layout">
        <Image src={bilayer} alt="Graphic of a human cell lipid bilayer" />
        <p>
          Lipid bilayer with GPCR and sodium ion channel for Molecular Sensing
          (2017)
        </p>
        <Image
          src={confocal}
          alt="Graphic showing differences between confocal microscopes"
        />
        <p>
          Differences between widefield and confocal microscopes for Molecular
          Devices (2017)
        </p>
      </div>
    </main>
  </body>
</html>
